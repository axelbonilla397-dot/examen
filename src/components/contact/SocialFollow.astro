---
import { Icon } from "astro-icon/components";

const socialLinks = [
    { icon: "lucide:facebook", href: "#", name: "Facebook" },
    { icon: "lucide:twitter", href: "#", name: "Twitter" },
    { icon: "lucide:instagram", href: "#", name: "Instagram" },
    { icon: "lucide:linkedin", href: "#", name: "LinkedIn" },
];
---

<div>
    <h3 class="font-bold text-lg mb-4">Follow Us</h3>
    <div class="flex gap-4">
        {
            socialLinks.map((link) => (
                <a
                    href={link.href}
                    aria-label={link.name}
                    class="btn btn-circle btn-ghost hover:bg-primary/10 hover:text-primary transition-colors"
                >
                    <Icon name={link.icon} class="w-6 h-6" />
                </a>
            ))
        }
    </div>
</div>
