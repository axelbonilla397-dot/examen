---
import AboutCard from "./AboutCard.astro";

const values = [
    {
        title: "Uncompromising Quality",
        description:
            "We only partner with brands that meet our rigorous standards for performance, durability, and design.",
        icon: "lucide:award",
    },
    {
        title: "Fast Global Shipping",
        description:
            "State-of-the-art logistics to ensure your premium tech reaches you safely and quickly, anywhere in the world.",
        icon: "lucide:truck",
    },
    {
        title: "Expert Support",
        description:
            "Our team of tech specialists is available 24/7 to help you find the perfect device for your needs.",
        icon: "lucide:headset",
    },
];
---

<section class="py-20 bg-slate-50 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="text-center max-w-2xl mx-auto mb-16">
            <span
                class="text-primary font-bold uppercase tracking-widest text-sm mb-4 block"
                >Our Values</span
            >
            <h2
                class="text-3xl md:text-5xl font-black text-slate-900 uppercase"
            >
                What Drives Us Forward
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {values.map((value) => <AboutCard {...value} />)}
        </div>
    </div>
</section>
